<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#202020</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTimePickerWidgetStyle" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">#FFFFFF</item>
        <item name="android:numbersTextColor">#FFFFFF</item>
        <item name="android:numbersInnerTextColor">#FFFFFF</item>
        <item name="android:numbersSelectorColor">#FFFFFF</item>
        <item name="android:numbersBackgroundColor">#FFFFFF</item>
        <item name="android:amPmTextColor">#FFFFFF</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="CheckedTextViewLeft">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkMarkTint">#ff2211</item>
        <item name="android:buttonTint">#ff2211</item>
    </style>

    <style name="CheckedTextViewDef">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checkMarkTint">#ff2211</item>
        <item name="android:buttonTint">#ff2211</item>
    </style>

</resources>
